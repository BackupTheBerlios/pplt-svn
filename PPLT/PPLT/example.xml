<?xml version="1.0"?>

<PPLTDevice name="Mobil.GSMMobilPhone">
    <Head>
        <Require>
            <DCPUModule>Master.Interface.UniSerial</DCPUModule>
            <DCPUModule>Master.Transport.ReadLine</DCPUModule>
            <DCPUModule>Master.Device.GSM</DCPUModule>
        </Require>
    </Head>
    
    <Setup>
        <Load name="Master.Interface.UniSerial">
            <Parameter name="Port"><Variable name="Port"/></Parameter>
            <Parameter name="TimeOut">0.5</Parameter>
            <Parameter name="Speed"><Variable name="Speed"/></Parameter>
            <Load name="Master.Transport.ReadLine" namespace="GSM">
                <Parameter name="LineEnd">0A0D</Parameter>
                <Load name="Master.Device.GSM"/>
            </Load>
        </Load>
    </Setup>
        
</PPLTDevice>