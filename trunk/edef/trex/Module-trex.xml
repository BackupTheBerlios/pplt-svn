<?xml version="1.0"?>

<element name="Module">
    <attribute name="version"/>

    <optional><element name="Author"><anyString/></element></optional>

    <element name="Version"><anyString/></element>
    <element name="Archive"><anyString/></element>
    <element name="Class"><anyString/></element>

    <optional>
        <element name="Requires">
            <oneOrMore>
                <element name="Parameter">
                    <attribute name="name"/>
                    <optional><attribute name="default"/></optional> 
                </element>
            </oneOrMore>
        </element>
    </optional>


    <element name="Provides">
        <element name="Input">
            <attribute name="name"/>
            <attribute name="type"/>
        </element>
        
        <element name="Output"> 
            <attribute name="name"/>
            <attribute name="type"/>
         </element>

        <element name="Inputs">
            <attribute name="pattern"/>
            <attribute name="type"/>
        </element>

        <element name="Outputs">
            <attribute name="pattern"/>
            <attribute name="type"/>
        </element>
    </element>
</element>
