BUILD_TARGETS = @BUILD_TARGETS@ @BUILD_LIBWXPPLT@



all: 
	@subdirs='$(BUILD_TARGETS)';\
    for srcdir in $$subdirs; do\
        make -C $$srcdir; \
    done 
    
install: all
	@subdirs='$(BUILD_TARGETS)';\
    for srcdir in $$subdirs; do\
        make install -C $$srcdir; \
    done 

clean:
	@subdirs='$(BUILD_TARGETS)';\
    for srcdir in $$subdirs; do\
        make clean -C $$srcdir; \
    done 


distclean: clean
	@subdirs='$(BUILD_TARGETS)';\
    for srcdir in $$subdirs; do\
        make distclean -C $$srcdir; \
    done 
	rm -f configure Makefile config.status config.h
	rm -rf autom4te.cache
	rm -f config.log


